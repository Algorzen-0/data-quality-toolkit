# Algorzen Data Quality Toolkit - Development Dockerfile
FROM python:3.12-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV FLASK_ENV=development
ENV FLASK_DEBUG=1

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    libpq-dev \
    default-libmysqlclient-dev \
    pkg-config \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Install development dependencies
RUN pip install --no-cache-dir \
    pytest \
    pytest-asyncio \
    black \
    flake8 \
    mypy \
    ipython

# Copy application code
COPY . .

# Create non-root user
RUN useradd --create-home --shell /bin/bash algorzen && \
    chown -R algorzen:algorzen /app
USER algorzen

# Expose ports
EXPOSE 8000 8787 9090

# Development command with auto-reload
CMD ["uvicorn", "algorzen_dqt.api.dashboard:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
